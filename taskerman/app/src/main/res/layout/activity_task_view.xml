<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".views.TaskView">

    <EditText
        android:id="@+id/editTextTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Tarefa" />

    <Button
        android:id="@+id/buttonSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar Data" />

    <TextView
        android:id="@+id/textViewSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:textAppearanceMedium" />



    <Spinner
        android:id="@+id/editTextTaskPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prioridade da Tarefa" />


    <CheckBox
        android:id="@+id/taskCompletedCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConcluÃ­da" />

    <CheckBox
        android:id="@+id/taskCompletedCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendente" />

    <Button
        android:id="@+id/buttonSaveTask"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="Salvar Tarefa"
        app:icon="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/buttonDeleteTask"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="Excluir Tarefa"
        app:icon="@android:drawable/ic_delete" />

    <Button
        android:id="@+id/buttonVoltar"
        android:layout_width="376dp"
        android:layout_height="37dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#CCCCCC"
        android:onClick="voltar"
        android:text="Voltar"
        app:icon="@android:drawable/ic_menu_revert" />


</LinearLayout>
